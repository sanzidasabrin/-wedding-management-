@model IEnumerable<VogueLink2.Models.Favourate>

@{
    ViewBag.Title = "Favourite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Favourite</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Product.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Product_Img1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Product_Name)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Product.Product_Img1)" width="80px" height="50px" />
        </td>
        <td>
            <a href="@Url.Action("DeleteFav", "UserAccess", new { id = item.Favourates_Id })">
                <img src="~/Images/deletef.png" width="30px" height="25px" />
            </a>
        </td>

    </tr>
}

</table>
