@model IEnumerable<VogueLink2.Models.Product>

@{
    ViewBag.Title = "ProductViewSeller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProductViewSeller</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

    @if(TempData["AlertMessage"]!=null)
    {
<div class="alert alert-success">
    <strong>@TempData["AlertMessage"]</strong>
</div>
    }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product_Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Product_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Quantity)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Product_Img1)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Product_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Quantity)
            </td>

            <td>
                <img src="@Html.DisplayFor(modelItem => item.Product_Img1)" width="80px" height="50px" />
            </td>

            <td>
                @Html.ActionLink("Edit", "UpdateProduct", new { id = item.Product_Id }) |
                
                @Html.ActionLink("Delete", "ProductDelete", new { id = item.Product_Id })
            </td>
        </tr>
    }

</table>
